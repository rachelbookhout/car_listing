<h1><%= @manufacturer.name %> - <%= @manufacturer.country%></h1>
  <ul>
  <%@cars.each do |car| %>
    <%if @manufacturer.id = car.manufacturer_id%>
      <li><%= link_to "#{car.color} - Year: #{car.year} - Mileage: #{car.mileage}", car_path(car)%></li>
    <%end%>
  <%end%>
  </ul>


<p><%=link_to "Go back", manufacturers_path%></p>
<p><%=link_to "Create a New Manufacturer", new_manufacturer_path %></p>
